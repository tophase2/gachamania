<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Gachamania</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
            <li><%= link_to '会員一覧', admin_users_path, class: 'nav-link text-dark' %></li>
            <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' %></li>
          <% elsif user_signed_in? %>
            <li class="mt-3"><%= link_to 'ユーザー', users_path, class: 'nav-link text-dark' %></li>
            <li class="mt-3"><%= link_to '投稿', new_post_image_path, class: 'nav-link text-dark' %></li>
            <li class="mt-3"><%= link_to 'プロフィール', user_path(current_user.id), class: 'nav-link text-dark' %></li>
            <li class="mt-3"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %></li>
            <li class="ml-3"><%= render 'public/searches/form' %></li>
          <% else %>
            <li><%= link_to '新規登録', new_user_registration_path, class: 'nav-link text-dark' %></li>
            <li><%= link_to 'ログイン', new_user_session_path, class: 'nav-link text-dark' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>